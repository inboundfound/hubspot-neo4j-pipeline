# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# Optional: select a named app token at runtime (e.g., BIGCO)
# HUBSPOT_APP=BIGCO
# Optional: additional app token(s) that can be selected via HUBSPOT_APP
# BIGCO_ACCESS_TOKEN=pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password

# Pipeline Configuration
BATCH_SIZE=100
MAX_RETRIES=3
LOG_LEVEL=INFO

# Feature flags (safe defaults; can override as needed)
# Use Contacts basic_api.get_page instead of Search API (avoids 10k cap)
USE_BASIC_API_FOR_CONTACTS=true
# Use offset query parameter for legacy Email Events pagination
USE_EMAIL_EVENTS_OFFSET_PAGINATION=true
# Log progress every N contacts during extraction
CONTACTS_PAGE_LOG_INTERVAL=5000
